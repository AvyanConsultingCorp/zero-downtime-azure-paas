{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "_artifactsLocation": {
            "type": "securestring"
        },
        "_artifactsSasToken": {
            "type": "securestring"
        },
        "uniquePrefix": {
            "defaultValue": "qwerty",
            "type": "string"
        },
      "functions": {
        "type": "secureObject"
      },
      "packageVersion": {
        "type": "string"
      },
        "location":{
            "type": "string"
        },
        "appInsightsServiceName": {
            "type": "string"
        },
        "tags": {
            "type": "object"
        }
    },
    "variables": {
        "appInsightName": "[toLower(concat(parameters('uniquePrefix'),'-',parameters('appInsightsServiceName'),'-appinsights'))]",
        "appInsightsResourceGroup": "[toLower(concat(parameters('uniquePrefix'),'-operations-rg'))]",
        "functionAppStorageAccName": "[concat(replace(toLower(concat(parameters('uniquePrefix'),'-fapp')),'-',''),'stg')]"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "fapp-storage",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'),'templates/resources/microsoft.storage/general.storage.json')]"
                },
                "parameters": {
                    "storageAccountName": {
                    "value": "[variables('functionAppStorageAccName')]"
                    },
                    "sku": {
                    "value": "Standard_LRS"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "tags": {
                        "value": "[parameters('tags')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "fapp-appsvcplan",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'),'templates/resources/microsoft.web/appsvcplan.azfunction.json')]"
                },
                "parameters": {
                    "hostingPlanName": {
                        "value": "[toLower(concat(parameters('uniquePrefix'),'-',parameters('functions').hostingPlanServiceName,'-appsvcplan'))]"
                    },
                    "tags": {
                        "value": "[union(parameters('tags'), parameters('functions').tags)]"
                    }
                }
            }
        },
      {
        "apiVersion": "2017-05-10",
        "name": "[concat(parameters('functions').name)]",
        "type": "Microsoft.Resources/deployments",
        "dependsOn": [
          "fapp-appsvcplan",
          "fapp-storage"
        ],
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[concat(parameters('_artifactsLocation'),'templates/resources/microsoft.web/app.azfunction.json')]"
          },
          "parameters": {
            "hostingPlanName": {
              "value": "[toLower(concat(parameters('uniquePrefix'),'-',parameters('functions').hostingPlanServiceName,'-appsvcplan'))]"
            },
            "functionAppName": {
              "value": "[toLower(concat(parameters('uniquePrefix'),'-',parameters('functions').serviceName,'-fapp'))]"
            },
            "location": {
              "value": "[parameters('location')]"
            },
            "storageAccountName": {
              "value": "[variables('functionAppStorageAccName')]"
            },
            "appInsightsName": {
              "value": "[variables('appInsightName')]"
            },
            "appInsightsResourceGroup": {
              "value": "[variables('appInsightsResourceGroup')]"
            },
            "tags": {
              "value": "[union(parameters('tags'), parameters('functions').tags)]"
            }
          }
        }
      },
      {
        "name": "fapp-package",
        "apiVersion": "2017-05-10",
        "type": "Microsoft.Resources/deployments",
        "dependsOn": [
          "[concat(parameters('functions').name)]",
          "fapp-appsvcplan",
          "fapp-storage"
        ],
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[concat(parameters('_artifactsLocation'),'templates/resources/microsoft.web/package.azfunction.json')]"
          }
        },
        "parameters": {
          "functionAppName": {
            "value": "[concat(parameters('functions').name)]"
          },
          "location": {
            "type": "[parameters('location')]"
          },
          "packageUri": {
            "type": "[concat(parameters('_artifactsLocation'),'artifacts/',parameters('packageVersion'),'/function/MiddleTier.zip')]"
          },
          "tags": {
            "type": "object"
          }
        }

      }
    ],
    "outputs": {}
}