{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "name": {
        "type": "string"
      },
      "appGatewayName": {
        "type": "string"
      },
      "trafficRoutingMethod": {
        "type": "string",
        "defaultValue": "Performance",
        "allowedValues": [
          "Performance",
          "Weighted",
          "Priority",
          "Geographic"
        ]
      },
      "appGatewayPublicIpName": {
        "type": "string"
      }
    },
    "resources": [
        {
            "apiVersion": "2017-05-01",
            "type": "Microsoft.Network/trafficmanagerprofiles",
            "name": "[parameters('name')]",
            "location": "global",
          "properties": {
            "profileStatus": "Enabled",
            "trafficRoutingMethod": "[parameters('trafficRoutingMethod')]",
            "dnsConfig": {
              "relativeName": "[parameters('name')]",
              "ttl": 300
            },
            "monitorConfig": {
              "protocol": "HTTP",
              "port": 80,
              "path": "/"
            },
            "endpoints": [
              {
                "name": "[parameters('appGatewayName')]",
                "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
                "properties": {
                  "endpointStatus": "Enabled",
                  "targetResourceId": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('appGatewayPublicIpName'))]",
                  "weight": 1,
                  "priority": 1,
                  "endpointLocation": "[resourceGroup().location]"
                }
              }
            ]

          }
        }
    ]
}