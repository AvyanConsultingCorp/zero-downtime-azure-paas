{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environmentReference": {
      "type": "secureObject"
    },
    "workloadReference": {
      "type": "secureObject"
    },
    "monitoring": {
      "type": "secureObject"
    }
  },
  "variables": {
  },
  "resources": [
    { 
      "apiVersion": "2017-05-10", 
      "name": "deploy-functionapp", 
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "deploy-sql",
        "deploy-blobstorage",
        "deploy-keyvault"
      ],
      "properties": { 
         "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('environmentReference')._artifactsLocation,'templates/buildingblocks/web/azuredeploy.json')]",
          "contentVersion": "1.0.0.0"
        },
         "parameters": { 
          "_artifactsLocation":{"value": "[parameters('environmentReference')._artifactsLocation]"}, 
          "_artifactsSasToken":{"value": "[parameters('environmentReference')._artifactsLocationSasToken]"},
          "uniquePrefix":{"value": "[parameters('environmentReference').prefix]"},
          "functions":{"value": "[parameters('workloadReference').function]"},
          "environment":{"value": "[parameters('environmentReference').env]"},
          "location":{"value": "[parameters('environmentReference').location]"},
          "appInsightServiceName":{"value": "[parameters('monitoring').appInsights.serviceName]"},
          "adAppClientId":{"value": "[parameters('environmentReference').adAppClientId]"},
          "adAppClientPassword":{"value": "[parameters('environmentReference').deploymentPassword]"},
          "keyVaultUri": {"value": "[reference('deploy-keyvault').outputs.keyVaultUri.value]"},
          "tags": {"value": "[parameters('environmentReference').tags]"},
          "tenantId":{"value": "[parameters('environmentReference').tenantId]"},
          "tenantDomain":{"value": "[parameters('environmentReference').tenantDomain]"}
        }
      }
    }
  ],
  "outputs": {
    "keyVaultName":{
      "type": "string",
      "value": "[reference('deploy-keyvault').outputs.keyVaultName.value]"
    },
    "keyVaultUri":{
      "type": "string",
      "value": "[concat('https://', reference('deploy-keyvault').outputs.keyVaultName.value, '.vault.azure.net/')]"
    }
  }
}